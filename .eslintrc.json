{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "sourceType": "module"
    },
    "rules": {
        "no-console": 0,
        "no-cond-assign": 0,
        "no-unused-vars": 1,
        "no-extra-semi": "warn",
        "semi": "warn"
    },
    "extends": "eslint:recommended"
}
